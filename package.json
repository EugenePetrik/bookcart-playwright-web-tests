{
    "name": "playwright-letcode-project",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "check-format": "prettier --check .",
        "format": "prettier --write . && eslint . --ext ts --fix",
        "check-lint": "eslint . --ext ts",
        "check-all": "npm run check-format && npm run check-lint",
        "postinstall": "npx playwright install",
        "test": "cross-env ENV=qa npx playwright test",
        "test:ui": "npm t -- --project=chromium",
        "test:accessibility": "npm t -- --project=accessibility",
        "report": "npx playwright show-report"
    },
    "keywords": [
        "typescript",
        "playwright"
    ],
    "author": "Yevhen Petryk",
    "license": "ISC",
    "devDependencies": {
        "@axe-core/playwright": "^4.9.0",
        "@types/node": "^20.12.12",
        "@typescript-eslint/eslint-plugin": "^7.9.0",
        "@typescript-eslint/parser": "^7.9.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.57.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-playwright": "^1.6.1",
        "eslint-plugin-prettier": "^5.1.3",
        "lighthouse": "^9.6.8",
        "playwright-lighthouse": "^2.2.2",
        "prettier": "^3.2.5",
        "rimraf": "^5.0.7",
        "typescript": "^5.4.5",
        "winston": "^3.13.0"
    },
    "dependencies": {
        "@faker-js/faker": "^8.4.1",
        "@playwright/test": "^1.44.0",
        "dotenv": "^16.4.5"
    }
}
